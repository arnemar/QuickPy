{
  "name": "quickpy",
  "displayName": "QuickPy",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": ["onLanguage:python"],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "quickpy.helloWorld",
        "title": "Hello World"
      }
    ],
    "configuration": {
      "properties": {
        "pythonLiveExecution.debounceDelay": {
          "type": "number",
          "default": 300,
          "description": "Debounce delay for live execution (in milliseconds)."
        },
        "pythonLiveExecution.outputColor": {
          "type": "string",
          "default": "grey",
          "description": "Color of the inline output text."
        },
        "pythonLiveExecution.errorColor": {
          "type": "string",
          "default": "red",
          "description": "Color of the inline error text."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.95.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.13.0",
    "esbuild": "^0.24.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.6.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
